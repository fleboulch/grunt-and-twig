{% set sizes = [360, 768, 1024, 1440, 1920, 3440, 5120] %}

{% if ext is not defined %}
    {% set ext = 'jpg' %}
{% endif %}

<picture>
    <!--[if IE 9]><video style="display: none;"><![endif]-->
    {% for size in sizes %}
        {% if not loop.last %}
            <source srcset="/image/{{ size }}/{{ name }}.{{ ext }}" media="(max-width: {{ size }}px)" />
        {% else %}
            <source srcset="/image/{{ size }}/{{ name }}.{{ ext }}" />
        {% endif %}
    {% endfor %}
    <!--[if IE 9]></video><![endif]-->
    <img src="/image/{{ sizes|first }}/{{ name }}.{{ ext }}" alt="{{ alt }}" />
</picture>
